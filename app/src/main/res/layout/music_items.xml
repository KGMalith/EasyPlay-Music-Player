<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/audio_item"
    android:layout_marginTop="2dp"
    android:padding="10dp"
    android:elevation="5dp"
    android:background="@drawable/splash_screen_background_color">
    
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/music_image"
        android:padding="5dp"
        android:elevation="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fileName"
        android:layout_toEndOf="@+id/music_image"
        android:layout_marginStart="15dp"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo"
        android:id="@+id/music_file_name"
        android:layout_toRightOf="@+id/music_image"
        android:layout_toStartOf="@+id/menuMore"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/menuMore" />


    <ImageView
        android:id="@+id/menuMore"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:elevation="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_more" />
</RelativeLayout>